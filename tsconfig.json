{
    "compilerOptions": {
      /* Basic Options */
      "target": "es6",
      "module": "NodeNext",
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "strict": true /* Enable all strict type-checking options. */
    },
    "include": [
      "src\\*"
    ],
    "exclude": [
      "tests\\*"
    ]
}